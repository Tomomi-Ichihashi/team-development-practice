<div class="container">
    <div class="row">
        <div class ="col-lg-12">
          <h3>商品一覧</h3>
              <table class = "table table-hover">
                <thead>
                  <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                  </tr>
                </thead>
                <tbody>
                  <% @product.each do |product| %>
                  <tr>
                    <td><%= product.id %></td>
                    <td><%= link_to product.name,"admins/products/#{product.id}" %></td>
                    <td><%= product.price %></td>
                    <td><%= product.category_id %></td>
                    <td><%= product.product_status  %></td>
                    <th>
                  </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>